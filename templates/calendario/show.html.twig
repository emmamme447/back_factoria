    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ calendario.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ calendario.titulo }}</td>
            </tr>
            <tr>
                <th>Asunto</th>
                <td>{{ calendario.asunto }}</td>
            </tr>
            <tr>
                <th>Nombre_destinatario</th>
